{
  "manifest_version": 3,
  "name": "Close All Unpinned Tabs",
  "version": "1.1",
  "description": "Closes all unpinned tabs across all workspaces (windows)",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "close-unpinned-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Close all unpinned tabs"
    }
  }
}
